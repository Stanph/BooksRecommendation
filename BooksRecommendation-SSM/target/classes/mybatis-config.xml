<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <!--        打开延迟加载的开关-->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!--        将积极加载改为延迟加载，即按需加载-->
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>

    <typeAliases>
        <package name="com.zucc.br.pojo"/>
    </typeAliases>

    <mappers>
        <mapper resource="com/zucc/br/mapper/BxBooksMapper.xml"/>
        <mapper resource="com/zucc/br/mapper/BxUsersMapper.xml"/>
        <mapper resource="com/zucc/br/mapper/RatingsMapper.xml"/>
    </mappers>

</configuration>